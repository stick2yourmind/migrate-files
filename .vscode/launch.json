{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TypeORM Migrations",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/typeorm/cli.js",
      "args": [
        "migration:run",
        "-d",
        "src/database/data-source.ts"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Debug TypeORM Migrations (JS)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/typeorm/cli.js",
      "args": [
        "migration:run",
        "-d",
        "dist/database/data-source.js"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Attach to TypeORM Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    }
  ]
}